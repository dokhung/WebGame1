@page "/"
@using System.Timers
@code {
    
    
    private string[] imageUrls = new string[]
    {
        "css/img/BO.png",
        "css/img/GAU2.png",
        "css/img/JUMOC2.png"
    };
    private string currentImage;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Random random = new Random();
        currentImage = imageUrls[random.Next(imageUrls.Length)];
        Timer timer = new Timer(500);
        timer.Elapsed += (sender, e) =>
        {
            currentImage = imageUrls[random.Next(imageUrls.Length)];
            StateHasChanged();
        };
        timer.Start();
    }

    public void OnPlay()
    {
        base.OnInitialized();
        Random random = new Random();
        currentImage = imageUrls[random.Next(imageUrls.Length)];
        Timer timer = new Timer(10);
        timer.Elapsed += (sender, e) =>
        {
            currentImage = imageUrls[random.Next(imageUrls.Length)];
            StateHasChanged();
        };
        base.OnInitialized();
        currentImage = imageUrls[random.Next(imageUrls.Length)];
        
        
    }
}


<div style="text-align: center;">
    <img src="css/img/free-icon-rock-paper-scissors-6851361.png" style="max-width: 200px; max-height: 200px;" />
    <h1 style="font-size: 24px;">가위 바위 보 게임</h1>
</div>


<div class="game-container">
    <div class="square">
        <img src="@currentImage" alt="Image" style="height: 200px" width="200px"/>
    </div>
    <div class="square">
        <button class="play-button" onclick="@OnPlay">Play</button>
    </div>
    <div class="square">
        <img src="@currentImage" alt="Image" style="height: 200px" width="200px"/>
    </div>
     
</div>
